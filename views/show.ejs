<!DOCTYPE html>
<html>
    <head>
        <%- include ('../partials/head.ejs') %>
    </head>
    <body>

            
        <div class="container">
            <h1><%=patient.name%></h1>
            <div class="row">
                <div class="col-6">
                    <button class="btn btn-warning mb-3" onclick="location.href='/patients/<%=patient.id%>/edit'">Edit Patient Information</button>

                    <button class="btn btn-danger mb-3 d-block" type="button" data-toggle="modal" data-target="#delete-patient-modal">Delete Patient</button>

                    <form id="delete-patient-form" class="d-none" action="/patients/<%=patient.id%>?_method=DELETE" method="POST">
                    </form>
                </div>
                <div class="col-6">
                    <button class="btn btn-dark mb-3 d-block" onclick="location.href='/patients/'">Back To Patient List</button>
               
                    <button class="btn btn-dark mb-3 d-block" onclick="location.href='/patients/<%=patient.id%>/visits/new'">Add New Visit</button>
                </div>

            </div>
            <div class="row">
                <div class="col-6">
                    <h2>DEMOGRAPHIC INFORMATION</h2>
              
                    <p><strong>Date of Birth:</strong> <%=patient.birthday%></p>
                    <p><strong>Gender:</strong> <%=patient.gender%></p>
                    <p><strong>Height:</strong> <%=patient.height%> inches</p>
                    <p><strong>Weight:</strong> <%=patient.weight%> lbs</p>

                    <h2>PAST MEDICAL HISTORY</h2>
                    <p><%=patient.medicalConditions%></p>

                    <h2>ALLERGIES</h2>
                    <p><%=patient.drugAllergies%></p>
                </div>
                
                <div class="col-6">
                    
                    <h2>VISIT SUMMARY</h2>
                    <% for (let i = 0; i < patient.visits.length; i ++ ) { %>
                        <div class="row mb-4">
                            <div class="col-9">

                                <p><strong>Date of Service:</strong> <%=patient.visits[i].dateOfService%></p>
                                <p><strong>Current Medication List:</strong> <%=patient.visits[i].rxList%></p>
                                <p><strong>Doctor's Orders:</strong> <%=patient.visits[i].drsOrders%></p>
                            </div>
                            <div class="col-3">
                                <button class="btn btn-warning mb-3" onclick="location.href='/patients/<%=patient.id%>/visits/<%= i %>/edit'">Edit</button>
                            
                            
                            </div>
                        
                        </div>
                    <% } %>
                </div>
            </div>

            <div class="modal fade" id="delete-patient-modal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Are you sure you want to delete this patient?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        </div>
                        <div class="modal-body">
                        You cannot undo this change!
                        </div>
                        <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                        <button type="button" id="confirm-delete-patient-btn" class="btn btn-danger">Confirm</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
            // click handler for confirming to delete patient from the modal
            $('#confirm-delete-patient-btn').on('click', () => {
                $('#delete-patient-form').submit();
            })
        </script>
    </body>
</html>