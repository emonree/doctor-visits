<html lang="en">
<head>
    <%- include ('../partials/head.ejs') %>
</head>
    <body>
        <div class="container"> 
        <h1 class="mt-5 mb-4">Edit Patient Information</h1>
        <button class="btn btn-dark btn-lg mb-3 hvr-float-shadow" onclick="location.href='/patients/<%=patient.id%>'">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
                <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z"/>
            </svg>
            Back To Patient List
        </button>
        <form action="/patients/<%=patient.id%>?_method=PUT" method="POST">
            <input class="form mb-2" type="text" name="name" placeholder="name" value="<%=patient.name%>" /><br/>
            <input class="form mb-2" type="date" name="birthday" placeholder="date of birth" value="<%=patient.birthday%>" /><br/>
            <input class="form mb-2" type="text" name="gender"  placeholder="gender" value="<%=patient.gender%>" /><br/>
            <input class="form mb-2" type="number" name="height" placeholder="height in inches" value="<%=patient.height%>" /><br/>
            <input class="form mb-2" type="number" name="weight"  placeholder="weight in lbs" value="<%=patient.weight%>" /><br/>
            <input class="form mb-2" type="text" name="medicalConditions"  placeholder="medical conditions" value="<%=patient.medicalConditions%>" /><br/>
            <input class="form mb-2" type="text" name="drugAllergies"  placeholder="drug allergies" value="<%=patient.drugAllergies%>" /><br/>
           
            <!-- <input class="btn btn-success btn-lg form mt-2 mb-2 hvr-float-shadow" type="submit" value="Update Information"/> -->
            <button class="btn btn-success btn-lg form mt-2 mb-2 hvr-float-shadow" type="submit">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2-circle" viewBox="0 0 16 16">
                    <path d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0z"/>
                    <path d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l7-7z"/>
                </svg>
                Update Information
            </button>
        </form>
        
        
        </div>
    </body>
</html>