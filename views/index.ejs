<!DOCTYPE html>
<html>
    <head>
        <%- include ('../partials/head.ejs') %>
    </head>
    <body>
        <div class="container index">
            <h1 class="mt-5 mb-3 existing-pt-header">Existing Patients</h1>
            <button class="btn btn-warning btn-lg mb-4 hvr-float-shadow" onclick="location.href='/%>'">Back To Main Page</button>
                
            <!-- apply display flex and flex wrap to this div to wrap the cards -->
            <div class="d-flex flex-wrap card-box">
                <% for (let i = 0; i < patients.length; i++) { %>
                    <a href="/patients/<%=patients[i]._id%>">
                        <div class="card bg-light mb-3 mr-3" style="width: 200px">
                
                            <div class="card-body index">
                                <p class="card-title text-center"> <%=patients[i].name%> </p>
                            </div>
                            
                        </div>
                    </a>
                <% } %>
            </div>
            <img class="index-img" src="https://as1.ftcdn.net/v2/jpg/02/66/24/38/1000_F_266243842_A8Qh9XCCgj5O80HdMqVTxI5NoWDStuuu.jpg">
        </div>
    </body>
</html>