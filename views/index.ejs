<!DOCTYPE html>
<html>
    <head>
        <%- include ('../partials/head.ejs') %>
    </head>
    <body>
        <div class="container">
            <h1 class="mt-5"></h1>
            <!-- <button class="btn mb-3 btn-primary" onclick="location.href='/pets/new'">Adopt Here!</button>
            <button class="btn mb-3 btn-info" onclick="location.href='/create'">List A New Pet</button> -->
            <div>
                
                <% for (let i = 0; i < pets.length; i++) { %>
                    <a href="/pets/<%=pets[i].id%>">
                        <div class="card bg-light border-dark mb-3" style="min-width: 200px; max-width: 200px;">
                            <img src=" <%=pets[i].img%> " class="card-img-top"/>

                            <div class="card-body">
                                <p class="card-title"> <%=pets[i].name%> </p>
                            </div>
                            
                        </div>
                    </a>
                <% } %>
            </div>
        </div>
    </body>
</html>